# Turso Database Configuration
# Get these from your Turso dashboard (turso.tech)
TURSO_DATABASE_URL=libsql://your-db.turso.io
TURSO_AUTH_TOKEN=your-auth-token

# Admin Password (for simple admin authentication)
# Change this to a secure password
ADMIN_PASSWORD=your-secure-admin-password

# Admin Session Secret (for signing session cookies)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ADMIN_SESSION_SECRET=your-random-secret-here

# Site URL (for generating guest links)
PUBLIC_SITE_URL=https://your-wedding-site.com
