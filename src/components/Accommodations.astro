---
import { config } from '../config';

const hotels = config.accommodations;
---

<section class="section" id="accommodations">
  <div class="container">
    <div class="text-center animate-on-scroll">
      <h2 class="section-title">Accommodations</h2>
      <p class="section-subtitle">Recommended hotels near the venue for our overseas guests</p>
    </div>

    <div class="max-w-4xl mx-auto">
      <div class="grid md:grid-cols-2 gap-6">
        {hotels.map((hotel) => (
          <div class="bg-secondary p-6 animate-on-scroll">
            <h3 class="font-serif text-xl mb-3">{hotel.name}</h3>
            <div class="space-y-2 text-sm">
              <div class="flex items-start gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 text-primary flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
                <span class="text-muted">{hotel.address} - {hotel.distance}</span>
              </div>
              <div class="flex items-start gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 text-primary flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <span class="text-muted">{hotel.priceRange}</span>
              </div>
            </div>
            <a
              href={hotel.mapsLink}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center gap-1 mt-4 text-sm text-primary hover:text-accent"
            >
              View on Maps &rarr;
            </a>
          </div>
        ))}
      </div>

      <!-- Additional Info -->
      <div class="mt-8 text-center animate-on-scroll">
        <p class="text-muted text-sm">
          We recommend booking your accommodation early as rooms fill up quickly.
          <br />
          Contact us if you need assistance with your booking.
        </p>
      </div>
    </div>
  </div>
</section>
